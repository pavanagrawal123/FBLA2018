extends ../layouts/default

block content
	.container-fluid
		.row(style="display:flex;align-items:center; background-image: url('/images/homeheader.jpg'); height: 1000px; padding-top: 100px; padding-bottom: 100px;")
			div(style="padding: 20px; width: 100%; margin-top: 220px; background-color: RGBA(80, 98, 127, .6); color: #e2e2da;")
				h2.heading(style="font-size: 4em; color: e2e2da;") FIND YOUR JOB
				br
				h1.heading(style="font-size: 6em; text-decoration: underline;  color: e2e2da;") NOW
						
		.row(style="background-image: url('/images/about-us.png');  padding-top: 100px; padding-bottom: 100px;")
			.page-part
				.col-sm-4
					h1.heading ABOUT US
					p For more than a decade, [Company’s name here] is a global leader in connecting the perfect jobs to people, for more than a decade. We has helped people improve their lives with better jobs by providing some of the broadest, most sophisticated job seeking. [Company’s name here] continues to provides service all over the United States and expanding our service to neighbor countries. 
		.row(style="background-color: #1b1a1e; padding-top: 100px; padding-bottom: 100px;")
			.container
				.row
					.col-sm-4
						a(href="/jobsearch")
							img(src="/images/index1.png").third-index
							.inner-center-button Find A Job
					.col-sm-4
						a(href="/resume")
							img(src="/images/index2.png").third-index
							.inner-center-button Resume Tips and Templates
					.col-sm-4
						img(src="/images/index3.png").third-index
						.inner-center-button Application Tips
		.row(style="background-color: #eaaa1f; padding-top: 50px; padding-bottom: 50px;")
			.quote
				h1 [name] got me my first job right after I graduated college! Very professional, I reccomend them!